{
    "compilerOptions": {
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "target": "es5",
        "jsx": "react",
        "lib": [
            "dom",
            "es7"
        ],
        "plugins": [
            {
              "name": "typescript-tslint-plugin"
            }
        ],
    },
    "include": [
        "src/**/*.ts",
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}